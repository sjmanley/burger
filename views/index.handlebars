<div class="header d-flex align-items-center justify-content-center">
  <img class="burger" src="./assets/images/burger.png" ><h1>Da Burgers!</h1>
</div>
<div class="container mt-5">
  <div id="main" class="row row-cols-1 row-cols-md-3">
      <div class="col mb-4">
        <h2>Ready to Eat!</h2>
        <ul>
          {{#each burgers}}
            {{#unless eaten}}
              {{> burger/burger-block eaten=true}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col mb-4">
        <h2>Add Da Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <button type="submit">Add Da Burger</button>
        </form>
      </div>

      <div class="col mb-4">
        <h2>Burgers Consumed!</h2>
        <ul>
          {{#each burgers}}
            {{#if eaten}}
              {{> burger/burger-block eaten=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>

    </div>
  </div>